{
  "name": "expresso-content-management",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.6.4"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "prestart": "npm run build",
    "start": "dotenvx run --env-file=.env -- node dist/httpServer",
    "dev": "dotenvx run --env-file=.env.local -- ts-node-dev -r tsconfig-paths/register --debug --respawn src/httpServer",
    "test": "dotenvx run --env-file=.env.local -- jest",
    "lint": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^0.44.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "~4.16.1",
    "fp-ts": "^2.16.6",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest"
      ]
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/spec/**/*.spec.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  }
}
